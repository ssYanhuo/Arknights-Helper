<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- 默认主题 -->
    <style name="AppTheme2" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor" tools:ignore="NewApi">@color/colorBackground</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
        <item name="android:navigationBarColor" tools:ignore="NewApi">@color/colorBackground</item>
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">true</item>
        <item name="android:navigationBarDividerColor" tools:ignore="NewApi">
            ?attr/colorControlHighlight
        </item>
        <item name="android:colorBackground">@color/colorBackground</item>
    </style>

    <style name="AppTheme2.CardView.Accent" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">2dp</item>
        <item name="cardBackgroundColor">@color/colorAccent2</item>
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="android:padding">@dimen/activity_horizontal_margin</item>
    </style>

    <style name="AppTheme2.CardView.Secondary" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">0dp</item>
        <item name="cardBackgroundColor">@android:color/white</item>
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="android:padding">@dimen/activity_horizontal_margin</item>
    </style>

    <style name="AppTheme2.CardView.Normal" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">2dp</item>
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="android:padding">@dimen/activity_horizontal_margin</item>
    </style>

    <style name="AppTheme2.CardView.Unimportant" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@android:color/transparent</item>
        <item name="cardElevation">0dp</item>
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="android:padding">@dimen/activity_horizontal_margin</item>
    </style>

    <style name="AppTheme2.BottomSheetDialogFragment" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppBottomSheetStyle</item>
    </style>

    <style name="AppBottomSheetStyle" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="backgroundTint">@android:color/transparent</item>
    </style>

    <style name="AppTheme.Default" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Default.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Default.Intro" parent="AppTheme.Default.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="AppTheme.Default.FloatingWindow" parent="Theme.AppCompat">
        <item name="android:textColor">#E0E0E0</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Default.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <!-- 新年主题 -->
    <style name="AppTheme.NewYear" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimaryNewYear</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkNewYear</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NewYear.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NewYear.FloatingWindow" parent="Theme.AppCompat">
        <item name="android:textColor">#E0E0E0</item>
        <item name="colorPrimary">@color/colorPrimaryNewYear</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkNewYear</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NewYear.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <!-- 浅色主题 -->
    <style name="AppTheme.Light" parent="Theme.AppCompat.DayNight">
        <item name="colorPrimary">@color/colorPrimaryLight</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkLight</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Light.FloatingWindow" parent="Theme.AppCompat.Light">
        <item name="android:textColor">#000000</item>
        <item name="colorPrimary">@color/colorPrimaryLight</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkLight</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Default.FloatingButtonAnimation">
        <item name="android:windowEnterAnimation">@animator/overlay_button_show</item>
        <item name="android:windowExitAnimation">@animator/overlay_button_hide</item>
    </style>

    <style name="AppTheme.Default.FloatingWindowAnimation">
        <item name="android:windowEnterAnimation">@animator/overlay_main_show</item>
        <item name="android:windowExitAnimation">@animator/overlay_main_hide</item>
    </style>

    <style name="AppTheme.Default.AutoOCRProgressAnimation">
        <item name="android:windowEnterAnimation">@animator/overlay_auto_ocr_progress_show</item>
        <item name="android:windowExitAnimation">@animator/overlay_auto_ocr_progress_hide</item>
    </style>

    <style name="AppTheme.Light.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <style name="AppTheme.CheckBox.Blue" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/checkbox_background_blue</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:minWidth">@dimen/activity_horizontal_margin</item>
    </style>

    <style name="AppTheme.CheckBox.Yellow" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/checkbox_background_yellow</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:minWidth">@dimen/activity_horizontal_margin</item>
    </style>

    <style name="AppTheme.CheckBox.Green" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/checkbox_background_green</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:minWidth">@dimen/activity_horizontal_margin</item>
    </style>

    <style name="AppTheme.CheckBox.Red" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/checkbox_background_red</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:minWidth">@dimen/activity_horizontal_margin</item>
    </style>

    <style name="AppTheme.CheckBox.Cyan" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/checkbox_background_cyan</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:minWidth">@dimen/activity_horizontal_margin</item>
    </style>

    <style name="AppTheme.CheckBox.Lime" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/checkbox_background_lime</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:minWidth">@dimen/activity_horizontal_margin</item>
    </style>

    <style name="AppTheme.HrResultButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:button">@null</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:minWidth">@dimen/activity_horizontal_margin</item>
    </style>

    <style name="DialogActivity" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>

    <style name="Widget.AppTheme.Default.MyView" parent="">
        <item name="android:background">@color/gray_400</item>
        <item name="exampleColor">@color/light_blue_400</item>
    </style>

</resources>
