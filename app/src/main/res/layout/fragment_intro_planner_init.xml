<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraints"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.IntroPlannerInitFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="正在初始化刷图规划插件"
        android:textAppearance="@android:style/TextAppearance.Material.WindowTitle"
        app:layout_constraintBottom_toTopOf="@+id/animatedProgressBar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="这可能需要一些时间" />

    <com.ssyanhuo.arknightshelper.widget.AnimatedProgressBar
        android:layout_width="192dp"
        android:layout_height="192dp"
        android:tint="@color/colorAccent"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>