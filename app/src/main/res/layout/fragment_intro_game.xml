<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/compatibility"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.IntroGameFragment">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@android:style/TextAppearance.Material.WindowTitle"
            android:text="选择默认客户端和游戏语言" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="部分游戏内语言可能不支持全部功能" />
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:divider="@android:color/darker_gray"
            android:showDividers="beginning|end|middle"
            android:checkedButton="@id/intro_network_china_mainland">
            <RadioButton
                android:id="@+id/intro_network_china_mainland"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="中国大陆"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"/>
            <RadioButton
                android:id="@+id/intro_network_other_regions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="其他地区"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"/>
        </RadioGroup>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>